    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/tests/**",
      "!**/node_modules/**"
    ]
  }
}